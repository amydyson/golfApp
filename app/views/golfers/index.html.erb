<p id="notice"><%= notice %></p>

<h1>Golfers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Handicap</th>
      <th>Ghin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @golfers.each do |golfer| %>
      <tr>
        <td><%= golfer.name %></td>
        <td><%= golfer.handicap %></td>
        <td><%= golfer.ghin %></td>
        <td><%= link_to 'Edit', edit_golfer_path(golfer) %></td>
        <td><%= link_to 'Delete', golfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

